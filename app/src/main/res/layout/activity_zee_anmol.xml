<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZeeAnmolActivity">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/headerColor"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="5dp"
            android:text="Zee Anmol"

            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/withoutAds"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_shape"
        android:text="How can I watch ZeeAnmol Without Ads?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/how_much"
        android:layout_width="300dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="How much does ZeeAnmol cost?"
        android:textAllCaps="false"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toEndOf="@+id/withoutAds"
        app:layout_constraintStart_toStartOf="@+id/withoutAds"
        app:layout_constraintTop_toBottomOf="@+id/withoutAds" />

    <Button
        android:id="@+id/why_is"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="@drawable/button_shape"
        android:text="Why is ZeeAnmol buffering ?"
        android:textAllCaps="false"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toEndOf="@+id/how_much"
        app:layout_constraintStart_toStartOf="@+id/how_much"
        app:layout_constraintTop_toBottomOf="@+id/how_much" />

    <Button
        android:id="@+id/how_do"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="How do i get my ZeeAnmol TV code?"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/why_is"
        app:layout_constraintStart_toStartOf="@+id/why_is"
        app:layout_constraintTop_toBottomOf="@+id/why_is" />

    <Button
        android:id="@+id/is_ZeeAnmol"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="Is ZeeAnmol and Zeeplex same ?"
        android:textAllCaps="false"
        android:padding="5dp"
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/how_do"
        app:layout_constraintStart_toStartOf="@+id/how_do"
        app:layout_constraintTop_toBottomOf="@+id/how_do" />

    <Button
        android:id="@+id/any_good"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="Is ZeeAnmol any good ?"
        android:padding="5dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toEndOf="@+id/is_ZeeAnmol"
        app:layout_constraintStart_toStartOf="@+id/is_ZeeAnmol"
        app:layout_constraintTop_toBottomOf="@+id/is_ZeeAnmol" />

</androidx.constraintlayout.widget.ConstraintLayout>